

#include<stdio.h>
#include<stdlib.h>
#include<string.h>
#include<assert.h>
#include<sys/types.h>
#include<sys/socket.h>
#include<arpa/inet.h>
#include<netinet/in.h>

int main(int argc,char *argv[])
{
	if(argc !=3)
	{
		printf("client: %s [server_ip][server_port]\n ",argv[0]); 
		return -1;
	}

	//建立客户端套接字
	int clisock = socket(AF_INET,SOCK_STREAM,0);
	
	//连接服务器端套接字
	//这个结构体的作用是：得到服务器断的套接字，用来连接双方
	struct sockaddr_in sersock;

	socklen_t len = sizeof(sersock);
	sersock.sin_family = AF_INET;
	sersock.sin_port=htons(atoi(argv[2]));
	sersock.sin_addr.s_addr=inet_addr(argv[1]);
	
	int nu=connect(clisock,(struct sockaddr*)&sersock,len);
	
	if(nu<0)
	{
		printf("connect failed\n");
		return -2;
	}

	//通信
	char buf[1024];
	while(1)
	{
		printf("send# ");
		fflush(stdout);
		ssize_t s =read(0,buf,sizeof(buf)-1);
		buf[s-1]=0;
		write(clisock,buf,s);

	}
	close(clisock);

	return 0;
}
